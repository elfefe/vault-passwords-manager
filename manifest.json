{
  "manifest_version": 3,
  "name": "Coffre fort des clés",
  "version": "1.1",
  "description": "Coffre fort de gestion des clés basé sur hashicorp Vault avec chiffrement ChaCha20-Poly1305.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Vault Passwords"
  },
  "options_page": "options.html",
  "permissions": [
    "storage",
    "tabs",
    "identity",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["google-oauth-callback.html", "google-oauth-callback.js"],
      "matches": ["<all_urls>"]
    }
  ]
}